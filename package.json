{
    "name": "@togawa-group/umiri",
    "type": "module",
    "version": "1.0.0",
    "description": "A lightweight, priority-based event bus with type-safe design for TypeScript.",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "author": "GroupTogawa",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@types/node": "latest",
        "@vitest/coverage-v8": "4.0.8",
        "eslint": ">=7.0.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "3.6.2",
        "tsup": "^8.5.0",
        "vitest": "^4.0.8"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "scripts": {
        "test": "vitest run --coverage",
        "bench": "bun run scripts/bench.ts",
        "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist --sourcemap --clean",
        "prepublishOnly": "bun run build"
    },
    "packageManager": "bun@1.3.1"
}
